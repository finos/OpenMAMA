AVIS_HOME=/usr/local
EXTRA=

# Parse the inputs
for i in $*
do
    case $i in
        --avis-path=*)
            AVIS_HOME=${i#*=}
            EXTRA="${EXTRA} --with-avis=${AVIS_HOME}"
            ;;
        --gtest-path=*)
            EXTRA="${$EXTRA} --with-unittests=${i#*=}"
            ;;
        *)
            # unknown options are passed straigh through
            EXTRA="${EXTRA} ${i}"
        ;;
    esac
done

# configure common
cd common/c_cpp
./configure $EXTRA
[ $? -ne 0 ] && exit $?
cd -

#configure mama
cd mama/c_cpp
./configure $EXTRA
cd -
